extends layout

block content
  h1= title
  p Welcome to BDT - Mongo

  // Wrapper
  #wrapper

    h2 Search Country
    #searchCountry
        fieldset
        input#searchCountryName(type='text', placeholder='Name')
        button#btnSearchCountry Search Country
    h2 Add Country
    #addCountry
      fieldset
          input#inputCountryName(type='text', placeholder='Name')
          input#inputCountryRegion(type='text', placeholder='Region')
          input#inputCountryPopulation(type='text', placeholder='Population')
          br
          button#btnAddCountry Add Country
      // /ADD USER
    // USER INFO
    #countryInfo
        h2 Country Info
        p
            strong Name:
            |  <span id='countryInfoName'></span>
            br
            strong Region:
            |  <span id='countryInfoRegion'></span>
            strong Population:
            |  <span id='countryInfoPopulation'></span>
            br
    // /USER INFO
    // USER LIST
    h2 Country List
    #countryList
      table
        thead
          th Country Name
          th Region
          th Population
          th Delete?
        tbody
    // /USER LIST

// /WRAPPER
